@{
    Layout = "~/_Layout.cshtml";
    Page.Title = string.Format("Razor - {0}", "Exercise 02");

    var cid = Request.QueryString["cid"];

    if (string.IsNullOrEmpty(cid))
    {
        Response.Redirect("Excercise02_B.cshtml");
    }

    //use data to lookup products
    var db = Database.Open("CHINOOK");
    var queryOne = @"SELECT Name FROM Artists WHERE ArtistId = @0";
    var queryTwo = @"SELECT AlbumId, Title, ReleaseYear, ReleaseLabel FROM Albums Where ArtistId = @0 ORDER BY Title";
    var firstQuery = db.Query(queryOne, cid);
    var secondQuery = db.Query(queryTwo, cid);

    var gridinstance = new WebGrid(firstQuery, rowsPerPage: 5);
}


@section banner {
    <h1>WebGrid Display</h1>
}

<div class="offset-1">
    <h3>Products for Category: @secondQuery</h3>
    <div class="col-11">
        @gridinstance.GetHtml(
            tableStyle: "table table-striped table-bordered table-hover",
            mode: WebGridPagerModes.All,
            firstText: "Start",
            lastText: "End",
            columns: gridinstance.Columns(
               gridinstance.Column(columnName: "ArtistId", header: "ID"),
               gridinstance.Column(columnName: "Name", header: "Name"),
               gridinstance.Column(columnName: "UnitPrice", header: "$", canSort: false,
                    format: (item) => item.UnitPrice.ToString("0.00")),
               gridinstance.Column(columnName: "UnitsInStock", header: "QoH", canSort: false),
               gridinstance.Column(columnName: "Discontinued", header: "Disc", canSort: false,
                    format: @<input type="checkbox" id="Discontinued"
                                    name="Discontinued" disabled="disabled"
                                    value="@item.Discontinued"
                                    @(item.Discontinued == true ? "Checked" : "") />),
gridinstance.Column(header: "", canSort: false,
format:@<text>
                                <a href="~/SamplePages/WebGridDestination.cshtml?pid=@item.ProductID"
                                   onclick="return confirm('Are you sure you wish to view @item.ProductName ?')">View</a>
</text>)
))
    </div>
</div>

@section banner {
    <h1>@Page.Title</h1>
}
